if game.PlaceId == 13642296453 then

    -- Carregar OrionLib
    local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

    -- Janela principal
    local Window = OrionLib:MakeWindow({Name = "PEDRIN TRAVAS", HidePremium = false, SaveConfig = true, ConfigFolder = "Pedro2."})

    -- Variáveis globais
    _G.AutoAtk = false
    _G.AutoRebirth = false

    -- Funções
    local function AutoAtk()
        while _G.AutoAtk do
            local args = {
                [1] = -0.19149193167686462
            }
            
            game:GetService("ReplicatedStorage").Packages.Knit.Services.ClickService.RF.Click:InvokeServer() -- Removido os parênteses extra
            wait(0.3) 
        end
    end

    local function AutoRebirth()
        while _G.AutoRebirth do
            game:GetService("ReplicatedStorage").Packages.Knit.Services.QuestService.RF.ActionQuest:InvokeServer()
            wait(1)
        end
    end

    local function EquipBest()
        game:GetService("ReplicatedStorage").Packages.Knit.Services.PetInvService.RF.UnequipAll:InvokeServer()
        wait(0.5)
        game:GetService("ReplicatedStorage").Packages.Knit.Services.PetInvService.RF.EquipBest:InvokeServer()
        wait(1.0)
    end

    -- Abas

    local AutoFarmTab = Window:MakeTab({
        Name = "Auto Farm",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })
    
    local AutoRebirthTab = Window:MakeTab({
        Name = "Auto Rebirth",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })
    
    local MiscTab = Window:MakeTab({
        Name = "Misc",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    -- Seções

    local AutoFarmSection = AutoFarmTab:AddSection({
        Name = "Auto-Farm" 
    })
    
    local AutoRebirthSection = AutoRebirthTab:AddSection({
        Name = "Auto-Rebirth"
    })
    
    local MiscSection = MiscTab:AddSection({
        Name = "Pets"
    })

    -- Botões

    AutoFarmSection:AddToggle({
        Name = "Auto Click", 
        Default = false,
        Callback = function(Value)
            _G.AutoAtk = Value
            if Value then
                AutoAtk()
            end
        end
    })

    AutoRebirthSection:AddToggle({
        Name = "Auto Rebirth",
        Default = false,
        Callback = function(Value)
            _G.AutoRebirth = Value
            if Value then
                AutoRebirth()
            end
        end
    })

    MiscSection:AddButton({
        Name = "Equip Best Pets", 
        Callback = function()
            EquipBest()
        end
    })
end
